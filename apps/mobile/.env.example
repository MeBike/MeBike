# Copy to .env (this file is safe to commit)

# Backend base URL (optional)
# - Android emulator defaults to http://10.0.2.2:4000
# - iOS defaults to http://localhost:4000
# - Physical device should use your LAN IP, e.g. http://192.168.1.21:4000
EXPO_PUBLIC_API_BASE_URL=

# Mapbox (required for maps + directions)
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=

# TomTom (optional)
EXPO_PUBLIC_TOMTOM_API_KEY=

# Firebase (optional; code handles missing values)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Shared package smoke toggle (optional)
EXPO_PUBLIC_SHARED_SMOKE=false
