{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["./types/*"],
      "@schemas/*": ["./schema/*"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@lib/*": ["./lib/*"],
      "@app/*": ["./app/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@contexts/*": ["./contexts/*"],
      "@providers/*": ["./providers/*"],
      "@custom-types": ["./types/index"]
    },
    "strict": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "../frontend/**",
    "../server/**",
    "../backend/**",
    "../iot-service/**",
    "../../packages/**/dist/**"
  ]
}
